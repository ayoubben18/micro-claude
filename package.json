{
  "name": "micro-claude",
  "version": "1.2.0",
  "description": "A structured AI-driven development method that interrogates, plans, and implements features through task decomposition",
  "keywords": [
    "claude-code",
    "ai-development",
    "task-management",
    "planning",
    "implementation"
  ],
  "author": "Ayoub",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayoubben18/micro-claude.git"
  },
  "bin": {
    "micro-claude": "./cli.js"
  },
  "main": "cli.js",
  "files": [
    "cli.js",
    "ralph.sh",
    ".claude/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "semantic-release": "^24.2.7"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "private": false,
  "engines": {
    "node": ">=14.0.0"
  }
}
